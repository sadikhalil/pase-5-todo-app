# ============================================================================
# Phase 5 — Production Environment Variables
# ============================================================================
# Copy this file to .env and fill in real values before deploying.
#   cp .env.production .env
# ============================================================================

# ── PostgreSQL ─────────────────────────────────────────────────────────────
POSTGRES_DB=todo_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ── JWT / Auth ─────────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL
ALGORITHM=HS256

# ── Event Bus ──────────────────────────────────────────────────────────────
EVENT_BUS_BACKEND=redis

# ── Frontend Build Arg ─────────────────────────────────────────────────────
# The URL the BROWSER uses to reach the backend.
# On a VM with public IP: http://<VM_PUBLIC_IP>:8000
# Behind a reverse proxy:  https://api.yourdomain.com
FRONTEND_API_URL=http://localhost:8000

# ── Port Overrides (optional) ──────────────────────────────────────────────
FRONTEND_PORT=3000
BACKEND_PORT=8000
